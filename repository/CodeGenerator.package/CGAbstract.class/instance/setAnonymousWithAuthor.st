code-authoring
setAnonymousWithAuthor
	" Private - Set author as anonymous "

	| authorClass |
	
	authorClass := Smalltalk at: #Author. 
	identity := (authorClass canUnderstand: #initialsPerSe)
				ifTrue: [ authorClass initialsPerSe ]
				ifFalse: [ ((authorClass canUnderstand: #fullNamePerSe) and: [ authorClass fullNamePerSe ~= 'Autogenerated' ])
						ifTrue: [ authorClass fullNamePerSe ]
						ifFalse: [ identity ] ].
	authorClass fullName: self autogeneratedName.

